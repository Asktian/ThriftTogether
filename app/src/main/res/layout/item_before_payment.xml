<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/before_payment_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="10dp"
            android:adjustViewBounds="true"
            android:id="@+id/before_payment_order_iv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/icon_shop" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">

            <TextView
                android:id="@+id/before_payment_order_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品名：XXXXXXXXX"
                android:textColor="@color/text_dark_color" />

            <TextView
                android:id="@+id/before_payment_order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下单时间: "
                android:textColor="@color/text_dark_color" />

            <TextView
                android:id="@+id/before_payment_order_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格:￥50"
                android:textColor="@color/text_dark_color" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:id="@+id/before_payment_order_pay"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="付款"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/white"
            android:layout_marginRight="20dp"
            android:textSize="15sp"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

</LinearLayout>
