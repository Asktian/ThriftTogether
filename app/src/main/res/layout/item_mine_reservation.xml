<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="8dp"
    android:background="@drawable/touch_bg"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:orientation="vertical"
    card_view:cardCornerRadius="10dp">

    <RelativeLayout
        android:id="@+id/mine_reservation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/mine_reservation_shop_iv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_shop" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mine_reservation_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="店名：XXXXXXXXX"
                android:textColor="@color/text_dark_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mine_reservation_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="地址XXXXX"
                android:textColor="@color/text_dark_color"
                android:textSize="14sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="165dp"
            android:layout_height="18dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="70dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mine_reservation_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="时间2019-5-20"
                android:textColor="@color/text_dark_color" />

        </LinearLayout>

        <TextView
            android:id="@+id/mine_reservation_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:maxLines="1"
            android:padding="10dp"
            android:text="人数：2"
            android:textColor="@color/text_dark_color"
            android:textSize="16sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
