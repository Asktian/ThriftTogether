<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.buy.fragment.SingleProductFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buy_package_details_price_sv"
        android:layout_above="@id/buy_single_product_price_rl">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="海底捞火锅"
                android:textSize="40sp"
                android:textColor="@color/contents_text"
                android:textStyle="bold"
                android:id="@+id/buy_single_product_name_text" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/buy_single_product_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tabbar_color"
                    android:textSize="14sp"
                    android:layout_alignParentStart="true"
                    android:text="@string/product_note"/>
                <TextView
                    android:id="@+id/buy_single_product_sale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/tabbar_color"
                    android:textSize="14sp"
                    android:text="@string/half_year_sale"/>
            </RelativeLayout>
            <ImageView
                android:id="@+id/product_detail_img"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="4dp"
                android:scaleType="fitCenter"/>
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="23sp"
                android:textColor="@color/contents_text"
                android:textStyle="bold"
                android:text="@string/package_details"/>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:id="@+id/buy_single_product_package_details_rv"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="23sp"
                android:textColor="@color/contents_text"
                android:textStyle="bold"
                android:text="@string/sweat_note"/>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:id="@+id/buy_single_product_sweat_note_rv"/>

        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/buy_single_product_price_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">
        <LinearLayout
            android:id="@+id/buy_single_product_price_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_alignParentStart="true"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/buy_single_product_price_ll2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/buy_single_product_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="24sp"
                    android:text="$12"/>
                <TextView
                    android:id="@+id/buy_single_product_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="12sp"
                    android:layout_marginStart="3dp"
                    android:text="6.4折"/>
            </LinearLayout>
            <TextView
                android:id="@+id/buy_single_product_max_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:text="最高门店价：￥18元"/>
        </LinearLayout>

        <Button
            android:id="@+id/buy_single_product_bt"
            android:layout_width="120dp"
            android:layout_height="0dp"
            android:text="@string/buy_now"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/buy_single_product_price_ll"
            android:layout_alignTop="@id/buy_single_product_price_ll"
            android:textColor="@color/white"
            android:elevation="1dp"
            android:background="@drawable/shape_buy_now"/>
    </RelativeLayout>
</RelativeLayout>