<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include layout="@layout/include_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="58dp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <!-- 美发 -->
        <LinearLayout
            android:id="@id/home_beauty_hairdressing"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/white"
                android:clickable="false"
                android:src="@drawable/ic_home_category_beauty_hairdressing" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/hairdressing"
                android:textColor="@color/text_grey_color"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- 美甲美瞳 -->
        <LinearLayout
            android:id="@id/home_beauty_nail_art"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/white"
                android:clickable="false"
                android:src="@drawable/ic_home_category_beauty_nail" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/nail_art"
                android:textColor="@color/text_grey_color"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- 美容美体 -->
        <LinearLayout
            android:id="@id/home_beauty_beauty_body"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/white"
                android:clickable="false"
                android:src="@drawable/ic_home_category_beauty_body" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/beauty_body"
                android:textColor="@color/text_grey_color"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- 医学美容 -->
        <LinearLayout
            android:id="@id/home_beauty_medical_cosmetology"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/white"
                android:clickable="false"
                android:src="@drawable/ic_home_category_beauty_medical" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/medical_cosmetology"
                android:textColor="@color/text_grey_color"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- 纤体瘦身 -->
        <LinearLayout
            android:id="@id/home_beauty_slimming"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/white"
                android:clickable="false"
                android:src="@drawable/ic_home_category_beauty_slimming" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/slimming"
                android:textColor="@color/text_grey_color"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <com.yyydjk.library.DropDownMenu
        android:id="@id/dropDownMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="118dp"
        app:dddividerColor="@color/gray"
        app:ddmaskColor="@color/mask_color"
        app:ddmenuBackgroundColor="@color/white"
        app:ddmenuMenuHeightPercent="0.5"
        app:ddmenuSelectedIcon="@drawable/ic_drop_down_selected"
        app:ddmenuTextSize="13sp"
        app:ddmenuUnselectedIcon="@drawable/ic_drop_down"
        app:ddtextSelectedColor="@color/colorPrimary"
        app:ddtextUnselectedColor="@color/text_grey_color"
        app:ddunderlineColor="@color/gray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="117dp"
        android:background="@color/split_line" />

</RelativeLayout>