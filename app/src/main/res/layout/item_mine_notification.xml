<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mine_order"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/touch_bg"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:orientation="vertical"
    card_view:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mine_notification_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/haidilao" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView

                android:id="@+id/mine_notification_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="你已获得......"
                android:textColor="@color/text_grey_color" />

            <TextView
                android:id="@+id/mine_notification_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="还有......"
                android:textColor="@color/text_grey_color" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:id="@+id/mine_notification_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-5-13"
                android:textColor="@color/text_grey_color" />

            <Button
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:id="@+id/mine_notification_btn"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_login_btn"
                android:text="查看详情"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
