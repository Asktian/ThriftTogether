<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/discover_store_icon"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:layout_gravity="start"
            android:contentDescription="@string/store_icon"
            android:src="@drawable/temp_map" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/discover_store_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:maxEms="15"
                android:layout_alignParentTop="true"
                android:layout_marginTop="8dp"
                android:text="双人套餐A"
                android:textColor="@color/text_dark_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/discover_store_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:lines="1"
                android:maxEms="15"
                android:text="周一至周日"
                android:textColor="@color/pos_color"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/discover_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_alignParentBottom="true"
                android:ellipsize="end"
                android:maxEms="18"
                android:text="￥108"
                android:textColor="@color/text_dark_color"
                android:textSize="12sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/shape_rush_buy"
                android:text="抢购"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/discover_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp" />

</LinearLayout>
